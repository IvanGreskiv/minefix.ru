<div class="bcomment">
	<div class="lcol">
		<span><img src="{foto}" alt=""/></span>
	</div>
	<div class="rcol">
		<h4>{author}</h4>
		{group-name} –
		<span>{date=d-F-y H:i}</span>
		<div class="comment">
			{comment}
			[not-group=5]
			<ul class="actions">
				<li>[spam]Спам[/spam]</li>
				<li>[complaint]Жалоба[/complaint]</li>
				<li>[com-edit]Изменить[/com-edit]</li>
				<li>[com-del]Удалить[/com-del]</li>
				<li>[fast]Ответить[/fast]</li>
				<li>{mass-action}</li>
			</ul>
			[/not-group]
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
</div>